								previewImages='{{ work.Preview_Images|dump  }}'
								images='{{ work.Images|dump  }}'
								description='{{work.Description|safe}}'
								shortDescription='{{ work.Short_Description }}'
								wide="true"
								hideModal='{{work.Hide_Modal|safe}}'
							>
							</c-work-list-item>
						</is-land>
					{% endif %}
				{% endfor %}
